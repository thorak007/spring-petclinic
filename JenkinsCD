pipeline {
  agent {
    kubernetes {
      defaultContainer 'toolbox'
      yamlFile 'jenkins-slave.yaml'
    }
  }
  stages {
    stage('DEPLOY') {
      steps {
        container('toolbox') {
          sh """
            helm repo add app-chart https://thorak007.github.io/app-chart
            helm repo update
            helm upgrade app-release-${namespace} app-chart/mychart --set deploy.containerTag=${imageTag} -n ${namespace} --reuse-values
          """
        }
      }    
    }
  }
}
